<div class="signup">
  <div class="panel panel-default">
    <div class="panel-heading">Sign Up</div>
    <div class="panel-body">
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="username">Email</label>
          <input type="email" class="form-control" id="username" placeholder="learner@example.com" name="username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Password" name="password">
        </div>
        <div class="form-group">
          <label for="motherLanguage">Which is your mother tongue?</label>
          <select class="form-control" name="motherLanguage">
            <option value="en">English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
            <option value="de">German</option>
            <option value="it">Italian</option>
            <option value="el">Greek</option>
            <option value="ru">Russian</option>
            <option value="pt">Portuguese</option>
          </select>
        </div>
        <div class="form-group">
          <label for="otherLanguage">Which language do you want to learn?</label>
          <select class="form-control" name="otherLanguage">
            <option value="en">English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
            <option value="de">German</option>
            <option value="it">Italian</option>
            <option value="el">Greek</option>
            <option value="ru">Russian</option>
            <option value="pt">Portuguese</option>
          </select>
        </div>
        <!-- <% if (typeof(message) != "undefined") { %> -->
          <!-- <div class="alert alert-danger" role="alert"><%= message %></div> -->
        <!-- <% } %> -->
        <% if ( message != "" ) { %>
          <div class="alert alert-danger" role="alert"><%= message %></div>
        <% } %>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        <!-- <div>
          <span class="flag-icon flag-icon-gr"></span>
        </div>
        <div>
          <span class="flag-icon flag-icon-es"></span>
        </div> -->
      </form>
    </div>
  </div>

</div>
